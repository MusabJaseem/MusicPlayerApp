<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background = "#e6f5ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <Button
        android:id="@+id/getInfoButton"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="28dp"
        android:text="Add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="96dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Music Library"
            android:textSize="24sp" />
    </ScrollView>

    <Button
        android:id="@+id/parseJSONButton"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/getInfoButton"
        android:text="Remove"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textView8"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textView9"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textView10"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textView11"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/textView12"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Add Music or Press Play"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button4"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/getInfoButton"
        android:layout_marginStart="95dp"
        android:text="Save"
        android:layout_marginLeft="95dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/getInfoButton"
        android:text="Play"
        android:layout_alignParentLeft="true" />


</RelativeLayout>